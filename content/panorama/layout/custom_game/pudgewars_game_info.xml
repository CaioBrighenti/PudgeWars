<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/pudgewars_game_info.css" />
	</styles>

	<Panel class="OverthrowGameInfo">
		<Panel id="Title">
			<Label id="TitleName" text="#addon_game_name" />
		</Panel>
		<Label id="ObjectiveHeader" class="Header" html="true" text="#game_info_header" />
		<Label id="BriefDescription" text="#game_info_header_description" />
		<Label id="HowToPlayHeader" class="Header" html="true" text="#game_info_how_to_play" />
		<Panel id="ThroneRow" class="InfoRow">
			<Label id="ThroneText" html="true" text="#game_info_throne" />
			<Image id="ThroneImage" src="file://{images}/custom_game/game_info/pudgehooking.psd" />
		</Panel>
		<Panel id="CoinsRow" class="InfoRow">
			<Image id="CoinsImage" src="file://{images}/custom_game/game_info/runes.psd" />
			<Label id="CoinsText" html="true" text="#game_info_coins" />
		</Panel>
		<Panel id="ItemsRow" class="InfoRow">
			<Label id="ItemsText" html="true" text="#game_info_items" />
			<Image id="ItemsImage" src="file://{images}/custom_game/game_info/items2.psd" />
		</Panel>
		<Label id="TipsHeader" class="Header" html="true" text=" helpful Tips" />
		<Panel id="TipsRow" class="InfoRow">
			<Label id="TipText01" class="TipText" html="true" text="#game_info_tip_1" />
			<Label id="TipText02" class="TipText" html="true" text="#game_info_tip_2" />
			<Label id="TipText03" class="TipText" html="true" text="#game_info_tip_3" />
			<Label id="TipText04" class="TipText" html="true" text="#game_info_tip_4" />
		</Panel>
	</Panel>
</root>

