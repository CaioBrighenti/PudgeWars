<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/pudgewars_tutorial.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/pudgewars_tutorial.js" />
		<include src="file://{resources}/scripts/custom_game/topbar_hack.js" />
	</scripts>

	<Panel hittest="false" class="PudgeWarsTutorialMain">
		<Panel hittest="false" class="PudgeWarsKillsToWin">
			<ProgressBar hittest="false" id="RadiantProgressBar" class="imbar-progress-bar">
				<Label id="RadiantScore" class="PudgewarsLabel" text="0/0" />
			</ProgressBar>

			<Panel hittest="false" class="Separator"/>

			<ProgressBar hittest="false" id="DireProgressBar" class="imbar-progress-bar">
				<Label id="DireScore" class="PudgewarsLabel" text="0/0" />
			</ProgressBar>
		</Panel>

		<Panel hittest="false" class="PudgeWarsTutorialButton">
			<Button id="ToggleTutorialButton" onactivate="OnToggleTutorialButton()">
				<Label class="PudgewarsLabel" text="Info UI" />
			</Button>
		</Panel>

		<Panel hittest="false" class="PudgeWarsTutorial">
			<Label id="PudgeWarsLabel" class="PudgewarsLabel" text="Find your upgrades here!" />
		</Panel>
		<Image id="ArrowImage" src="file://{images}/custom_game/spectate_heroselection_iee.png" />

		<Panel hittest="false" class="PudgeWarsTutorialPoints">
			<Label id="PudgeWarsLabelPoints" class="PudgewarsLabel" text="Your upgrade points are here!" />
		</Panel>
		<Image id="ArrowImagePoints" src="file://{images}/custom_game/spectate_heroselection_iee_left.png" />

		<Panel hittest="false" class="PudgeWarsTutorialShop">
			<Label id="PudgeWarsLabelShop" class="PudgewarsLabel" text="Purchase items in the shop here!" />
		</Panel>
		<Image id="ArrowImageShop" src="file://{images}/custom_game/spectate_heroselection_iee_bottom_right.png" />

		<Panel hittest="false" class="PudgeWarsTutorialToggle">
			<Label id="PudgeWarsLabelToggle" class="PudgewarsLabel" text="Toggle the informational UI here!" />
		</Panel>
		<Image id="ArrowImageToggle" src="file://{images}/custom_game/spectate_heroselection_iee_up.png" />

		<Panel hittest="false" class="PudgeWarsTutorialGameinfo">
			<Label id="PudgeWarsLabelGameinfo" class="PudgewarsLabel" text="Find the Game Info panel here!" />
		</Panel>
		<Image id="ArrowImageGameinfo" src="file://{images}/custom_game/spectate_heroselection_iee_left.png" />
	</Panel>	
</root>
