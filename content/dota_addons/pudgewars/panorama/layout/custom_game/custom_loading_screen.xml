<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>

	<Panel class="AddonLoadingRoot">
		<Panel id="CustomBg" >
			<Image id="bg" class="ProBg" src="file://{images}/custom_game/loading_screen/custom_bg.jpg" />
		</Panel>

		<Panel class="pw-social">
			<Panel class="pw-social-title">
				<Label class="LabelMid" text="Feel free to donate on patreon! This Patreon page support EarthSalamander #42, current maintainer of Pudge Wars, not the original creators!" style="" />
			</Panel>

			<Panel class="pw-social-buttons">
				<Button id="pw-social-button-patreon-en" class="pw-social-button" onactivate="DOTADisplayURL('https://www.patreon.com/earthsalamander42');" />
			</Panel>

			<Panel class="pw-social-title">
				<Label class="LabelMid" text="Join the Discord server to find more players, report bugs or suggest features!" style="" />
			</Panel>

			<Panel class="pw-social-buttons">
				<Button id="pw-social-button-discord-en" class="pw-social-button" onactivate="DOTADisplayURL('https://discord.gg/gsywzVX');" />
			</Panel>
		</Panel>

		<Panel id="TitlePanel">
			<Label id="AddonTitle" class="LabelBig" text="Pudge Wars" style="" />
		</Panel>
	</Panel>
</root>
